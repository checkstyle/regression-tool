<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <Match>
        <!-- that CLI class so we need system exit code there, but only in main(...) method -->
        <Class name="com.puppycrawl.tools.checkstyle.Main" />
        <Method name="main" />
        <Bug pattern="DM_EXIT" />
    </Match>
</FindBugsFilter>
